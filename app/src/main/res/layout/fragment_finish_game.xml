<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".randomizer.view.FinishGameFragment">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/optionButtons">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/finish_game_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginStart="@dimen/common_padding_large"
            android:layout_marginEnd="@dimen/common_padding_large"
            android:layout_marginTop="@dimen/common_padding_large"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivGamePhoto"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/common_padding_default"
            android:layout_marginEnd="@dimen/common_padding_default"
            android:layout_marginTop="@dimen/common_padding_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish_game_take_picture"
            app:icon="@drawable/ic_baseline_camera_24"
            app:iconGravity="end"
            android:layout_marginTop="@dimen/common_padding_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivGamePhoto"/>

        <TextView
            android:id="@+id/tvWinTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/finish_game_description_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginStart="@dimen/common_padding_large"
            android:layout_marginEnd="@dimen/common_padding_large"
            android:layout_marginTop="@dimen/common_padding_large"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTakePhoto"/>
        <TextView
            android:id="@+id/tvWinDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginStart="@dimen/common_padding_large"
            android:layout_marginEnd="@dimen/common_padding_min"
            android:layout_marginTop="@dimen/common_padding_large"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCopyCode"
            app:layout_constraintTop_toBottomOf="@+id/tvWinTitle"/>
            <ImageButton
                android:id="@+id/btnCopyCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/common_padding_micro"
                android:src="@drawable/ic_baseline_content_copy_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/design_default_color_primary"
                android:layout_marginEnd="@dimen/common_padding_default"
                app:layout_constraintStart_toEndOf="@+id/tvWinDescription"
                app:layout_constraintTop_toTopOf="@+id/tvWinDescription"
                app:layout_constraintBottom_toBottomOf="@+id/tvWinDescription"
                app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/common_padding_large"
            app:layout_constraintTop_toBottomOf="@+id/tvWinDescription"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/optionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding_large"
        app:layout_constraintTop_toBottomOf="@+id/nested"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_mode_button_back"
            app:icon="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_marginBottom="@dimen/common_padding_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnShareImage"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish_game_send"
            app:icon="@drawable/ic_baseline_share_24"
            app:iconGravity="end"
            android:enabled="false"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>